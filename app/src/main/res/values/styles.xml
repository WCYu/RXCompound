<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActionSheetDialogStyle" parent="@android:style/Theme.Dialog">

        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>

        <!-- Dialog进入及退出动画 -->
        <!--<item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimation</item>-->
    </style>
    <!-- dialog样式 -->
    <style name="ActionSheetDialogStyleone" parent="@android:style/Theme.Dialog">

        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <!--<item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimation</item>-->
    </style>

    <!--条形进度条-->
    <style name="StyleProgressBarMini" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">50dip</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:progressDrawable">@drawable/shape_progressbar_min</item>
    </style>






    <style name="measure_img">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">290px</item>
        <item name="android:background">@color/white</item>
        <item name="android:src">@mipmap/photo</item>
    </style>
    <style name="measure_img2">
        <item name="android:layout_width">290px</item>
        <item name="android:layout_height">290px</item>
        <item name="android:background">@color/white</item>
        <item name="android:src">@mipmap/photo</item>
    </style>

    <style name="measure_img_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_m</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="measure_img_num">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_m</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">30px</item>
    </style>

    <style name="measure_ll">
        <!--<item name="android:background">@color/white</item>-->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">80px</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="measure_title">
        <item name="android:textColor">@color/cor888</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">3</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:textSize">@dimen/text_size_m</item>
    </style>

    <style name="measure_value">
        <item name="android:textColor">@color/cor333</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">@dimen/text_size_m</item>
    </style>
    <style name="measure_lease_term">
        <item name="android:textColor">@color/cor333</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">@dimen/text_size_m</item>
    </style>

    <style name="measure_img_rl">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">290px</item>
        <item name="android:layout_margin">30px</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="CustomCheckBoxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_style</item>
          </style>

</resources>
