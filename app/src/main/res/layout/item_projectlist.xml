<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="78px"
        android:paddingLeft="20px"
        android:paddingRight="20px">

        <ImageView
            android:id="@+id/iv_list_item_project_mark"
            android:layout_width="84px"
            android:layout_height="32px"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/tv_list_item_project_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10px"
            android:layout_toLeftOf="@+id/tv_list_item_project_state"
            android:layout_toRightOf="@+id/iv_list_item_project_mark"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/colorBlackLight"
            android:textSize="@dimen/text_size_l" />

        <TextView
            android:id="@+id/tv_list_item_project_state"
            android:layout_width="84px"
            android:layout_height="40px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_state_start"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_s" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="20px"
        android:background="@color/colorLine" />

    <TextView
        android:id="@+id/tv_list_item_project_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24px"
        android:layout_marginRight="24px"
        android:layout_marginTop="24px"
        android:textColor="@color/colorGrayDark"
        android:textSize="@dimen/text_size_m" />

    <TextView
        android:id="@+id/tv_list_item_project_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24px"
        android:layout_marginLeft="24px"
        android:layout_marginRight="24px"
        android:layout_marginTop="10px"
        android:textColor="@color/colorGray"
        android:textSize="@dimen/text_size_s" />

</LinearLayout>