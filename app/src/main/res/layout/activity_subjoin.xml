<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBG"
    android:orientation="vertical">

    <include layout="@layout/include_header_btn_layout" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="24px"
        android:background="@color/colorLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="330px"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:padding="24px">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:background="@drawable/shape_circular_black"
            android:padding="10px">

            <EditText
                android:id="@+id/et_disbursement_content"
                android:layout_width="match_parent"
                android:layout_height="200px"
                android:background="@null"
                android:enabled="true"
                android:gravity="top"
                android:hint="请填写备注内容"
                android:inputType="textMultiLine"
                android:maxLength="70"
                android:maxLines="6"
                android:minLines="4"
                android:scrollbars="vertical"
                android:textColor="@color/colorGray"
                android:textColorHint="@color/colorGray"
                android:textSize="20px"></EditText>

            <TextView
                android:id="@+id/tv_subjoin_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/text_size_s" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20px"
            android:text="备注：请输入相关问题。"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/text_size_s" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorLine" />

</LinearLayout>
