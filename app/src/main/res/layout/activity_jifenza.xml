<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="338px"
        android:background="@drawable/ic_topbgblue"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="88px">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="100px"
                android:layout_marginRight="100px"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/colorwhite"
                android:textSize="@dimen/text_size_l6" />

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:padding="20px"
                android:src="@drawable/ic_backwrite" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="250px"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="150px"
                    android:layout_height="150px"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_mainicon" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_size_l" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="60px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_starone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5px"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_star" />

                    <ImageView
                        android:id="@+id/iv_startwo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5px"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_star" />

                    <ImageView
                        android:id="@+id/iv_starthree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5px"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_star" />

                    <ImageView
                        android:id="@+id/iv_starfour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5px"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_star" />

                    <ImageView
                        android:id="@+id/iv_starfive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5px"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_star" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_size_m" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="60px">

                    <ImageView
                        android:id="@+id/imageView18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20px"
                        android:src="@mipmap/biaotiqiandise" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10px"
                        android:layout_toEndOf="@+id/imageView18"
                        android:layout_toRightOf="@+id/imageView18"
                        android:text="级别（追加提点）" />
                </RelativeLayout>

                <HorizontalScrollView
                    android:id="@+id/hsv_sv"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="120px">

                        <GridView
                            android:id="@+id/gv_level"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:scrollbars="none">

                        </GridView>

                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="60px"
                android:layout_marginTop="20px"
                android:background="@color/colorWhite">

                <ImageView
                    android:id="@+id/imageView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:src="@mipmap/biaotiqiandise" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10px"
                    android:layout_toRightOf="@+id/imageView19"
                    android:text="升降级" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="300px"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="280px"
                    android:layout_height="280px">

                    <com.rxjy.rxcompound.widget.CircleProgressView
                        android:id="@+id/cpv_one"
                        android:layout_width="260px"
                        android:layout_height="260px" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_cirtipone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="距升级还差"
                            android:textColor="@color/cir_greentwo"
                            android:textSize="@dimen/text_size_4" />

                        <TextView
                            android:id="@+id/tv_cirnumone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="10px"
                            android:text="5万"
                            android:textColor="@color/cir_greenone"
                            android:textSize="@dimen/text_size_littlebig" />

                    </LinearLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="280px"
                    android:layout_height="280px"
                    android:layout_marginLeft="50px">

                    <com.rxjy.rxcompound.widget.CircleProgressView
                        android:id="@+id/cpv_two"
                        android:layout_width="260px"
                        android:layout_height="260px" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_cirtiptwo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="距降级还差"
                            android:textColor="@color/cir_bluetwo"
                            android:textSize="@dimen/text_size_4" />

                        <TextView
                            android:id="@+id/tv_cirnumtwo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="10px"
                            android:text="5万"
                            android:textColor="@color/cir_blueone"
                            android:textSize="@dimen/text_size_littlebig" />

                    </LinearLayout>
                </RelativeLayout>


            </LinearLayout>


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="60px"
                android:layout_marginTop="20px"
                android:background="@color/colorWhite">

                <ImageView
                    android:id="@+id/imageView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:src="@mipmap/biaotiqiandise" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10px"
                    android:layout_toRightOf="@+id/imageView20"
                    android:text="接单预收" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="100px"
                android:layout_marginLeft="20px"
                android:background="@color/colorWhite"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10px"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="200²（含）以下"
                        android:textSize="@dimen/text_size_m" />

                    <TextView
                        android:id="@+id/tv_moneyone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5px"
                        android:text="￥"
                        android:textColor="@color/textgreyone"
                        android:textSize="@dimen/text_size_8" />
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="fill_parent"
                    android:background="@color/line_color" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10px"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="200²-500²（含）"
                        android:textSize="@dimen/text_size_m" />

                    <TextView
                        android:id="@+id/tv_moneytwo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5px"
                        android:text="￥"
                        android:textColor="@color/textgreyone"
                        android:textSize="@dimen/text_size_8" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="100px"
                android:layout_marginLeft="20px"
                android:background="@color/colorWhite"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10px"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="500²-1200²（含）"
                        android:textSize="@dimen/text_size_m" />

                    <TextView
                        android:id="@+id/tv_moneythree"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5px"
                        android:text="￥"
                        android:textColor="@color/textgreyone"
                        android:textSize="@dimen/text_size_8" />
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="fill_parent"
                    android:background="@color/line_color" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10px"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1200²以上"
                        android:textSize="@dimen/text_size_m" />

                    <TextView
                        android:id="@+id/tv_moneyfour"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5px"
                        android:text="￥"
                        android:textColor="@color/textgreyone"
                        android:textSize="@dimen/text_size_8" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>