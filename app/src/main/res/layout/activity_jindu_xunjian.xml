<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBG"
    android:orientation="vertical">
    <!--tools:context="com.rxjy.des.activity.KaigongjiaodiActivity">-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="@color/colorPrimaryDes">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="19px"
            android:layout_height="36px"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20px"
            android:layout_marginStart="20px"
            android:gravity="center"
            android:src="@mipmap/jiantouzuo" />

        <TextView
            android:id="@+id/iv_add"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="10px"
            android:gravity="center"
            android:text="更多"
            android:textSize="@dimen/text_size_8"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_toLeftOf="@id/iv_add"
            android:layout_toRightOf="@+id/iv_back"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="注册"
            android:textColor="@color/colorWhite"
            android:textSize="36px" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:background="@mipmap/kaigongjiaodi"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24px"
            android:layout_marginStart="30px"
            android:layout_marginTop="70px">

            <ImageView
                android:layout_width="29px"
                android:layout_height="28px"
                android:src="@mipmap/xiangmumingcheng" />

            <TextView
                android:id="@+id/tv_xujnian_xiangmuname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12px"
                android:text="中国社会出版社"
                android:textColor="@color/colorWhite"
                android:textSize="28px" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24px"
            android:layout_marginStart="30px"
            android:layout_marginTop="20px">

            <ImageView
                android:layout_width="29px"
                android:layout_height="28px"
                android:src="@mipmap/dizhi" />

            <TextView
                android:id="@+id/tv_xunjian_xiangmuaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12px"
                android:text="北京市朝阳区六里屯19号院"
                android:textColor="@color/colorWhite"
                android:textSize="24px" />

        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/lv_jinduxunjian"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20px"></ListView>


</LinearLayout>
