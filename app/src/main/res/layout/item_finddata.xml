<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aandroid="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorwhite">

    <LinearLayout
        android:id="@+id/ll_one"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="200px"
            android:layout_margin="15px"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_imgone"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="fitXY"
                    android:src="@mipmap/zanwei" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_titleone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5px"
                    android:layout_marginRight="15px"
                    android:layout_marginTop="10px"
                    android:text=""
                    android:textSize="@dimen/text_size_ll" />

                <TextView
                    android:id="@+id/tv_timeone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="5px"
                    android:layout_marginLeft="5px"
                    android:gravity="right"
                    android:text=""
                    android:textSize="@dimen/text_size_8" />
            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:paddingBottom="5px"
        android:paddingLeft="10px"
        android:paddingRight="10px"
        android:paddingTop="10px"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_zero"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            android:layout_marginRight="15px"
            android:layout_marginTop="15px"
            android:orientation="horizontal"
             >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15px"
                android:layout_weight="4"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_img"
                    android:layout_width="240px"
                    android:layout_height="160px"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@mipmap/zanwei" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10px"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5px"
                    android:layout_marginRight="15px"
                    android:layout_marginTop="10px"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/colorBlackLight"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/tv_contect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_title"
                    android:layout_marginBottom="5px"
                    android:layout_marginLeft="5px"
                    android:layout_marginTop="20px"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:textColor="@color/colordark_the"
                    android:textSize="26px" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout

            android:id="@+id/ll_there"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/lv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="15px"
                android:textColor="@color/colorBlackLight"
                android:textSize="28px"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
               android:layout_marginTop="5px"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15px"
                    android:layout_marginRight="15px"
                    android:layout_weight="4"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/mv_imgone"
                        android:layout_width="240px"
                        android:layout_height="160px"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:src="@mipmap/zanwei" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15px"
                    android:layout_weight="4"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/mv_imgtwo"
                        android:layout_width="240px"
                        android:layout_height="160px"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:src="@mipmap/zanwei" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15px"
                    android:layout_weight="4"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/mv_imgthere"
                        android:layout_width="240px"
                        android:layout_height="160px"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:src="@mipmap/zanwei" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.3dip"
            android:layout_marginLeft="20px"
            android:layout_marginRight="15px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            android:layout_marginRight="15px"
            android:orientation="horizontal"
            android:weightSum="3">

            <RelativeLayout
                android:layout_width="120px"
                android:layout_height="wrap_content"
                android:layout_marginTop="12px"
                android:layout_marginBottom="12px"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_spare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textSize="26px"
                    android:textColor="@color/cor666"

                    />

                <TextView
                    android:id="@+id/tv_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15px"
                    android:text=""
                    android:textSize="26px"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/iv_like"
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10px"
                    android:layout_toLeftOf="@+id/tv_like"
                    android:src="@mipmap/ic_find"
                    android:visibility="invisible" />


                <ImageView
                    android:id="@+id/iv_viewse"
                    android:layout_width="25px"
                    android:layout_height="25px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="10px"
                    android:layout_toRightOf="@+id/tv_spare"
                    android:src="@mipmap/ic_find"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_views"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10px"
                    android:textColor="@color/cor666"
                    android:layout_toRightOf="@+id/iv_viewse"
                    android:visibility="gone"
                    android:textSize="26px" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_marginTop="12px"
                android:layout_marginBottom="12px"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/tv_timers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/cor666"
                    android:textSize="26px"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_edu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_imgedu"
            android:layout_width="fill_parent"
            android:layout_height="580px"
            android:layout_margin="20px"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_findpeixun" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15px">

            <TextView
                android:id="@+id/tv_edutitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:text=""
                android:textSize="@dimen/text_size_8" />

            <TextView
                android:id="@+id/tv_into"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20px"
                android:background="@drawable/border_red"
                android:paddingBottom="2px"
                android:paddingLeft="5px"
                android:paddingRight="5px"
                android:paddingTop="2px"
                android:text="进入岗前"
                android:textColor="#e60012"
                android:textSize="@dimen/text_size_8" />
        </RelativeLayout>

    </LinearLayout>

    <View
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/appbg"/>


</LinearLayout>