<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:padding="24px">

        <TextView
            android:id="@+id/tv_list_item_pro_list_position"
            android:layout_width="32px"
            android:layout_height="32px"
            android:background="@mipmap/list_index_icon"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_m" />

        <TextView
            android:id="@+id/tv_list_item_pro_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@+id/tv_list_item_pro_list_position"
            android:singleLine="true"
            android:textColor="@color/colorBlackLight"
            android:textSize="@dimen/text_size_l" />

        <TextView
            android:id="@+id/tv_list_item_pro_list_quantities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_list_item_pro_list_name"
            android:layout_below="@+id/tv_list_item_pro_list_name"
            android:layout_marginTop="6px"
            android:text="工程量"
            android:textColor="@color/colorGrayDark"
            android:textSize="@dimen/text_size_m" />

        <TextView
            android:id="@+id/tv_list_item_pro_list_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_list_item_pro_list_quantities"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@+id/tv_list_item_pro_list_quantities"
            android:textColor="@color/colorBlackLight"
            android:textSize="@dimen/text_size_l" />

    </RelativeLayout>

</LinearLayout>