<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.rxjy.rxcompound.activity.guwen.TiXianActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:id="@+id/rl_titletop"
        android:background="@color/color_orange">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="54px"
            android:layout_height="match_parent"
            android:layout_marginLeft="24px"
            android:gravity="center"
            android:padding="10px"
            android:src="@drawable/ic_backwrite" />

        <TextView
            android:id="@+id/iv_add"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="更多"
            android:textSize="@dimen/text_size_8"
            android:textColor="@color/colorWhite"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_toLeftOf="@id/iv_add"
            android:layout_toRightOf="@+id/iv_back"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="提现"
            android:textColor="@color/colorWhite"
            android:textSize="36px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/colorLine" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28px"
        android:layout_margin="40px"
        android:textColor="@color/cir_greenone"
        android:text="提示：申请提现后，申请金额会打入您的个人银行卡，请注意查收"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28px"
            android:text="提现金额"
            android:layout_marginRight="30px"/>

        <EditText
            android:id="@+id/et_jine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:textSize="28px"
            android:inputType="number"
            android:hint="请输入提现金额"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginRight="40px"
        android:layout_marginLeft="40px"
        android:background="#cbcbcb"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_tixian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_orange"
            android:layout_centerInParent="true"
            android:layout_margin="40px"
            android:textColor="@color/white"
            android:text="提现"
            android:textSize="30px"
            />
    </RelativeLayout>
</LinearLayout>
