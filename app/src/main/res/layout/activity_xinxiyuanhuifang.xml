<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<include layout="@layout/public_title_layout"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorwhite"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_marking"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/lv_hight_s">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/page_margin_sm"
                android:text="标记"
                android:textSize="@dimen/text_size_8"
                android:textColor="@color/textblack" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/page_margin_sm"
                android:background="@mipmap/ic_go" />

            <TextView
                android:id="@+id/tv_marking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/page_margin_sm"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/imageView2"
                android:textSize="@dimen/text_size_8"
                android:text="请选择"
                android:textColor="@color/textgreytwo" />
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/line_s"
            android:background="@color/line"
            android:layout_marginLeft="@dimen/page_margin_sm"/>
        <RelativeLayout
            android:id="@+id/rl_zhongyao"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/lv_hight_s">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/page_margin_sm"
                android:text="重要性"
                android:textSize="@dimen/text_size_8"
                android:textColor="@color/textblack" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/page_margin_sm"
                android:background="@mipmap/ic_go" />

            <TextView
                android:id="@+id/tv_zhongyao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/page_margin_sm"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/imageView4"
                android:textSize="@dimen/text_size_8"
                android:text="请选择"
                android:textColor="@color/textgreytwo" />
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/line_s"
            android:background="@color/line"
            android:layout_marginLeft="@dimen/page_margin_sm"/>
        <RelativeLayout
            android:id="@+id/rl_visittime"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/lv_hight_s">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/page_margin_sm"
                android:text="下次回访时间"
                android:textSize="@dimen/text_size_8"
                android:textColor="@color/textblack" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/page_margin_sm"
                android:background="@mipmap/ic_go" />

            <TextView
                android:id="@+id/tv_visittime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/page_margin_sm"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/imageView3"
                android:textSize="@dimen/text_size_8"
                android:text="请选择"
                android:textColor="@color/textgreytwo" />
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/line_s"
            android:background="@color/line"/>

    </LinearLayout>

    <EditText
        android:id="@+id/ed_visitcontent"
        android:layout_width="match_parent"
        android:layout_height="260px"
        android:layout_marginTop="40px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:textColor="@color/textgreyone"
        android:textSize="@dimen/text_size_m"
        android:hint="请输入回访内容"
        android:background="@color/colorwhite"
        android:gravity="top|left"
        android:padding="10px"/>
</LinearLayout>