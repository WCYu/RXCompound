<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/downline_it_Head"
        android:layout_width="90px"
        android:layout_height="90px"
        android:layout_marginLeft="20px"
        android:layout_marginTop="20px"
        android:src="@mipmap/xiaxiantoxiang"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/downline_it_Head"
        android:layout_marginTop="20px"
        android:layout_marginLeft="15px"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/downline_it_identity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="26px"
                android:textColor="#000"/>
           <TextView
               android:id="@+id/downline_it_activation"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"

               android:textSize="26px"
               android:textColor="@color/text_red"
               android:layout_marginLeft="15px"
               />
        </LinearLayout>
       <TextView
           android:id="@+id/downline_it_phone"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="36px"
           android:layout_marginTop="20px"
           />
    </LinearLayout>



</RelativeLayout>
