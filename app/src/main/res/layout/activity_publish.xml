<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
  >
 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="88px">
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="54px"
        android:layout_height="54px"
        android:layout_centerVertical="true"
        android:paddingLeft="20px"
        android:scaleType="center"
        android:src="@mipmap/back_icon"
        android:visibility="visible" />

    <TextView
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"

        android:layout_margin="24px"
        android:textSize="@dimen/text_size_8"
        android:gravity="center"
        android:textColor="@color/colorred"
        android:text="@string/submit" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_toLeftOf="@id/btn_submit"
        android:layout_toRightOf="@+id/iv_back"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="注册"
        android:textColor="@color/colorBlackLight"
        android:textSize="36px" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/colorLine" />
 </RelativeLayout>
 <View
     android:layout_width="match_parent"
     android:layout_height="20px"
     android:background="@color/line1"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20px"
        android:paddingBottom="20px"
        android:paddingLeft="24px"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标题"
            android:textSize="@dimen/text_size_8"
            android:textColor="@color/colorBlackLight"/>
         <EditText
             android:id="@+id/article_title"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:hint="文章标题"
             android:textColor="@color/cor9fa0a0"
             android:textSize="@dimen/text_size_8"
             android:layout_marginLeft="20px"
             android:background="@null"
             />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/colorLine" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="30px"
        android:paddingBottom="24px"
        android:paddingLeft="24px"
        android:textSize="@dimen/text_size_8"
        android:textColor="@color/colorBlackLight"
        android:text="内容"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:paddingLeft="24px"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400px"
            android:orientation="vertical"

            android:focusable="true"
            android:focusableInTouchMode="true">

            <EditText
                android:id="@+id/publish_content"
                android:layout_width="match_parent"
                android:layout_height="400px"
                android:background="@null"
                android:gravity="top"
                android:textSize="@dimen/text_size_8" />
        </LinearLayout>
    </ScrollView>
    <View
        android:layout_marginTop="24px"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/colorLine" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="30px"
        android:paddingBottom="24px"
        android:paddingLeft="24px"
        android:textSize="@dimen/text_size_8"
        android:textColor="@color/colorBlackLight"
        android:text="封面"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="24px"
        android:paddingRight="24px"
        android:paddingBottom="20px"
    >
        <ImageView
        android:id="@+id/complant_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
            android:paddingRight="10px"
        android:src="@mipmap/addpictures"></ImageView>
        <ImageView
            android:id="@+id/delete_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dotred"
            android:gravity="center"
            android:text=""
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_4"
            android:src="@mipmap/delete"
            android:visibility="invisible"
            android:layout_alignRight="@+id/complant_grid"
            />
    </RelativeLayout>

    <View
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorLine"></View>
</LinearLayout>