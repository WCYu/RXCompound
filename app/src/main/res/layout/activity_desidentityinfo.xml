<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="100px">

        <include layout="@layout/layout_title" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="250px">

                <RelativeLayout
                    android:id="@+id/rl_idcardone"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="20px"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="10px"
                    android:layout_marginTop="20px"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/iv_idcardone"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:src="@drawable/ic_idcard1" />

                    <ImageView
                        android:id="@+id/iv_addone"
                        android:layout_width="70px"
                        android:layout_height="70px"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_add" />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/corner_greytranstwo"
                        android:gravity="center"
                        android:paddingBottom="8px"
                        android:paddingTop="8px"
                        android:text="身份证正面"
                        android:textColor="@color/colorwhite"
                        android:textSize="@dimen/text_size_s" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_idcardtwo"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="20px"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="20px"
                    android:layout_marginTop="20px"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/iv_idcardtwo"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:src="@drawable/ic_idcard2" />

                    <ImageView
                        android:id="@+id/iv_addtwo"
                        android:layout_width="70px"
                        android:layout_height="70px"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_add" />

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/corner_greytranstwo"
                        android:gravity="center"
                        android:paddingBottom="8px"
                        android:paddingTop="8px"
                        android:text="身份证反面"
                        android:textColor="@color/colorwhite"
                        android:textSize="@dimen/text_size_s" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="250px">

                <RelativeLayout
                    android:id="@+id/rl_idcardthree"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="20px"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="10px"
                    android:layout_marginTop="20px"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/iv_personicon"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:src="@drawable/ic_idcard1" />

                    <ImageView
                        android:id="@+id/iv_addthree"
                        android:layout_width="70px"
                        android:layout_height="70px"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_add" />

                    <TextView
                        android:id="@+id/textView23"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/corner_greytranstwo"
                        android:gravity="center"
                        android:paddingBottom="8px"
                        android:paddingTop="8px"
                        android:text="个人形象照"
                        android:textColor="@color/colorwhite"
                        android:textSize="@dimen/text_size_s" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_idcardfour"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="20px"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="20px"
                    android:layout_marginTop="20px"
                    android:layout_weight="1">

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorwhite"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="72px">

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20px"
                        android:text="姓名        "
                        android:textSize="@dimen/text_size_8" />

                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20px"
                        android:layout_toRightOf="@+id/textView16"
                        android:background="@null"
                        android:ems="10"
                        android:hint="请输入"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/textgreyone"
                        android:textSize="@dimen/page_margin_8" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.3px"
                    android:layout_marginLeft="20px"
                    android:background="@color/colorline" />

                <RelativeLayout
                    android:id="@+id/rl_sex"
                    android:layout_width="fill_parent"
                    android:layout_height="72px">

                    <TextView
                        android:id="@+id/textView40"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20px"
                        android:text="性别        "
                        android:textSize="@dimen/text_size_8" />

                    <TextView
                        android:id="@+id/tv_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20px"
                        android:layout_toRightOf="@+id/textView40"
                        android:text=""
                        android:textSize="@dimen/page_margin_8" />


                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.3px"
                    android:layout_marginLeft="20px"
                    android:background="@color/colorline" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="72px">

                    <TextView
                        android:id="@+id/textView41"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20px"
                        android:text="手机        "
                        android:textSize="@dimen/text_size_8" />

                    <EditText
                        android:id="@+id/et_phone"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20px"
                        android:layout_toRightOf="@+id/textView41"
                        android:background="@null"
                        android:ems="10"
                        android:hint="请输入"
                        android:singleLine="true"
                        android:text=""
                        android:maxLength="11"
                        android:inputType="number"
                        android:textColor="@color/textgreyone"
                        android:textSize="@dimen/page_margin_8" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.3px"
                    android:layout_marginLeft="20px"
                    android:background="@color/colorline" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="72px">

                    <TextView
                        android:id="@+id/textView42"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20px"
                        android:text="邮箱        "
                        android:textSize="@dimen/text_size_8" />

                    <EditText
                        android:id="@+id/et_email"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20px"
                        android:layout_toRightOf="@+id/textView42"
                        android:background="@null"
                        android:ems="10"
                        android:hint="请输入"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/textgreyone"
                        android:textSize="@dimen/page_margin_8" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.3px"
                    android:layout_marginLeft="20px"
                    android:background="@color/colorline" />

                <RelativeLayout
                    android:id="@+id/rl_birth"
                    android:layout_width="fill_parent"
                    android:layout_height="72px">

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20px"
                        android:text="生日        "
                        android:textSize="@dimen/text_size_8" />

                    <TextView
                        android:id="@+id/tv_birth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20px"
                        android:layout_toRightOf="@+id/textView20"
                        android:text=""
                        android:textSize="@dimen/page_margin_8" />


                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.3px"
                    android:layout_marginLeft="20px"
                    android:background="@color/colorline" />

                <RelativeLayout
                    android:id="@+id/rl_edubg"
                    android:layout_width="fill_parent"
                    android:layout_height="72px">

                    <TextView
                        android:id="@+id/textView43"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20px"
                        android:text="学历        "
                        android:textSize="@dimen/text_size_8" />

                    <TextView
                        android:id="@+id/tv_edubg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20px"
                        android:layout_toRightOf="@+id/textView43"
                        android:text=""
                        android:textSize="@dimen/page_margin_8" />


                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.3px"
                    android:layout_marginLeft="20px"
                    android:background="@color/colorline" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="72px">

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20px"
                        android:text="身份证号"
                        android:textSize="@dimen/text_size_8" />

                    <EditText
                        android:id="@+id/et_idcard"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20px"
                        android:layout_toRightOf="@+id/textView17"
                        android:background="@null"
                        android:digits="0123456789xX"
                        android:ems="10"
                        android:hint="请输入"
                        android:maxLength="18"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/textgreyone"
                        android:textSize="@dimen/page_margin_8" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.3px"
                    android:layout_marginLeft="20px"
                    android:background="@color/colorline" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="72px">

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20px"
                        android:text="现住址    "
                        android:textSize="@dimen/text_size_8" />

                    <EditText
                        android:id="@+id/et_nowaddress"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20px"
                        android:layout_toRightOf="@+id/textView18"
                        android:background="@null"
                        android:ems="10"
                        android:hint="请输入"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/textgreyone"
                        android:textSize="@dimen/page_margin_8" />

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="100px">

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="fill_parent"
            android:layout_height="100px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/colorred"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/colorwhite"
            android:textSize="36px" />
    </RelativeLayout>


</LinearLayout>