<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24px">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_gongsimingcheng"
                android:layout_width="29px"
                android:layout_height="28px"
                android:layout_marginTop="2px"
                android:src="@mipmap/gongsimingcheng" />

            <TextView
                android:id="@+id/tv_list_item_home_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="12px"
                android:layout_toLeftOf="@+id/tv_list_item_home_state"
                android:layout_toRightOf="@+id/iv_gongsimingcheng"
                android:singleLine="true"
                android:text="新月茶楼"
                android:textColor="@color/colorBlackLight"
                android:textSize="28px" />

            <ImageView
                android:id="@+id/iv_phone_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_list_item_home_name"
                android:src="@drawable/selector_call"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_list_item_home_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="量房中"
                android:textColor="@color/colorGrayDark"
                android:textSize="@dimen/text_size_4" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:layout_marginStart="40px"
            android:layout_marginTop="15px"
            android:background="#898989" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15px"
            android:orientation="horizontal">

            <!--<ImageView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="2px"-->
            <!--android:layout_marginEnd="4px"-->
            <!--android:src="@mipmap/address" />-->


            <TextView
                android:id="@+id/tv_list_item_home_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="42px"
                android:layout_weight="1"
                android:text="XX市XXXXXX软件园XX楼"
                android:textColor="#898989"
                android:textSize="24px" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_list_item_home_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40px"
                android:layout_marginTop="15px"
                android:text="2017-06-07"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_s" />
            <ImageView
                android:id="@+id/iv_img"
                android:layout_width="55px"
                android:layout_height="55px"
                android:padding="10px"
                android:src="@drawable/ic_ercodered"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>