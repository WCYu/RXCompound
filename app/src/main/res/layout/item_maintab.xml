<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorwhite"
    android:orientation="vertical">




    <LinearLayout
        android:id="@+id/ll_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/main_tabitempic"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/main_tabitemtex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="1dp"
            android:text="首页"
            android:textColor="@drawable/selector_tabicon_text"
            android:textSize="@dimen/text_size_8" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_msgnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/ll_view"
        android:layout_alignTop="@+id/ll_view"
        android:background="@drawable/dotred"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_size_m"
        android:visibility="gone" />


</RelativeLayout>