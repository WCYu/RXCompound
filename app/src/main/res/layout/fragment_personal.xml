<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBG">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="450px"
        android:background="@drawable/ic_personbg">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="100px">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="个人中心"
                android:textColor="@color/colorwhite"
                android:textSize="@dimen/text_size_l6" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="130px"
            android:layout_height="130px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="23dp"
            android:layout_marginStart="23dp"
            app:srcCompat="@drawable/ic_pericon" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_icon"
            android:layout_marginLeft="13px"
            android:layout_marginTop="30px"
            android:layout_toRightOf="@+id/iv_icon"
            android:text="姓名"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_l" />


        <TextView
            android:id="@+id/tv_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号 xxxxxx"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_8"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="10px"
            android:layout_alignLeft="@+id/tv_name"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="110px"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_levelnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_m"
                    android:textColor="@color/colorWhite"
                    android:text="V10" />
                <TextView
                    android:id="@+id/tv_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="级别"
                    android:textSize="@dimen/text_size_4"
                    android:textColor="@color/colorGrayDark"
                    android:layout_marginTop="4px"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_resultnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_m"
                    android:textColor="@color/colorWhite"
                    android:text="10" />
                <TextView
                    android:id="@+id/tv_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="成就"
                    android:textSize="@dimen/text_size_4"
                    android:textColor="@color/colorGrayDark"
                    android:layout_marginTop="4px"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_integralnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_m"
                    android:textColor="@color/colorWhite"
                    android:text="110" />
                <TextView
                    android:id="@+id/tv_integral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="积分"
                    android:textSize="@dimen/text_size_4"
                    android:textColor="@color/colorGrayDark"
                    android:layout_marginTop="4px"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_teamnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_m"
                    android:textColor="@color/colorWhite"
                    android:text="8" />
                <TextView
                    android:id="@+id/tv_team"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="团队"
                    android:textSize="@dimen/text_size_4"
                    android:textColor="@color/colorGrayDark"
                    android:layout_marginTop="4px"/>

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorwhite"
        android:layout_marginTop="20px">
        <GridView
            android:id="@+id/gv_minegv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:numColumns="4"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"/>
    </RelativeLayout>



</LinearLayout>