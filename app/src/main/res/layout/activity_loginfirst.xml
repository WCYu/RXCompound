<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="fill_parent"
        android:layout_height="430px"
        app:srcCompat="@mipmap/ic_login_topbg"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_phone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="170px">
            <ImageView
                android:id="@+id/iv_phone_icon"
                android:layout_width="54px"
                android:layout_height="54px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40px"
                android:src="@mipmap/phone_icon" />
            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="51dp"
                android:text="@string/login_phone"
                android:textSize="@dimen/text_size_8"
                android:layout_marginBottom="@dimen/page_margin_mm"/>

            <EditText
                android:id="@+id/ed_phone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:numeric="integer"
                android:maxLength="11"
                android:inputType="textPersonName"
                android:hint="@string/login_phonehint"
                android:background="@null"

                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_phone"
                android:layout_marginLeft="@dimen/page_margin_m"
                android:textSize="@dimen/text_size_8"
                android:layout_marginRight="@dimen/page_margin_l"/>
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/line_s"
            android:background="@color/colorline"
            android:layout_marginLeft="@dimen/page_margin_sm"
            android:layout_marginRight="@dimen/page_margin_sm"/>
        <RelativeLayout
            android:id="@+id/rl_veritycode"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_verification_code_icon"
                android:layout_width="54px"
                android:layout_height="54px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40px"
                android:src="@mipmap/verification_code_icon" />
            <TextView
                android:id="@+id/tv_vitifycode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="51dp"
                android:text="@string/login_verifycode"
                android:textSize="@dimen/text_size_8"
                android:layout_marginBottom="@dimen/page_margin_mm"/>

            <EditText
                android:id="@+id/ed_vitifycode"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="@string/login_verifycodehint"
                android:background="@null"
                android:numeric="integer"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_vitifycode"
                android:layout_marginLeft="@dimen/page_margin_m"
                android:layout_toLeftOf="@+id/tv_vitifycodeget"
                android:textSize="@dimen/text_size_8"/>

            <TextView
                android:id="@+id/tv_vitifycodeget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/page_margin_sm"
                android:padding="5dp"
                android:text="@string/login_verifycodeget"
                android:textColor="@color/colorwhite"
                android:background="@color/colorred"
                android:textSize="@dimen/text_size_m"/>
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/line_s"
            android:background="@color/colorline"
            android:layout_marginLeft="@dimen/page_margin_sm"
            android:layout_marginRight="@dimen/page_margin_sm"/>
        <RelativeLayout
            android:id="@+id/rl_pwd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_new_password_icon"
                android:layout_width="54px"
                android:layout_height="54px"
                android:layout_marginLeft="19dp"
                android:src="@mipmap/new_password_icon"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="19dp" />
            <TextView
                android:id="@+id/tv_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="51dp"
                android:text="@string/login_pwd"
                android:textSize="@dimen/text_size_8"
                android:layout_marginBottom="@dimen/page_margin_mm"/>

            <EditText
                android:id="@+id/ed_pwd"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/login_pwdhint"
                android:background="@null"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_pwd"
                android:layout_marginLeft="@dimen/page_margin_l"
                android:textSize="@dimen/text_size_8"
                android:layout_marginRight="@dimen/page_margin_l"
                android:ems="10"
                android:inputType="textPassword" />

            <!--<EditText-->
                <!--android:id="@+id/ed_pwd"-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:ems="10"-->
                <!--android:numeric="integer"-->
                <!--android:maxLength="11"-->
                <!--android:inputType="numberPassword"-->
                <!--android:hint="@string/login_pwdhint"-->
                <!--android:background="@null"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_toRightOf="@+id/tv_pwd"-->
                <!--android:layout_marginLeft="@dimen/page_margin_l"-->
                <!--android:textSize="@dimen/text_size_8"-->
                <!--android:layout_marginRight="@dimen/page_margin_l"/>-->
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/line_s"
            android:background="@color/colorline"
            android:layout_marginLeft="@dimen/page_margin_sm"
            android:layout_marginRight="@dimen/page_margin_sm"/>


        <Button
            android:id="@+id/btn_next"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/page_margin_sm"
            android:layout_marginRight="@dimen/page_margin_sm"
            android:layout_marginTop="60px"
            android:background="@color/colorred"
            android:padding="10dp"
            android:text="激活"
            android:textColor="@color/colorwhite"
            android:textSize="@dimen/text_size_l6"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/ll_toforget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="20px">

                <TextView
                    android:id="@+id/tv_forgetpwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_8"
                    android:textColor="@color/textgreytwo"
                    android:layout_marginTop="25px"
                    android:text="忘记密码" />
                <View
                    android:layout_width="130px"
                    android:layout_height="0.3dip"
                    android:layout_marginTop="10px"
                    android:background="@color/textgreytwo"/>
            </LinearLayout>

        </LinearLayout>



    </LinearLayout>
</LinearLayout>