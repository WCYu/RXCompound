<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20px">

            <TextView
                android:id="@+id/tv_list_item_left_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@color/iv_selector"
                android:padding="8px"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_m" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20px">

            <com.rxjy.rxcompound.des.photo.CustomViewPager
                android:id="@+id/iv_header_left"
                android:layout_width="100px"
                android:layout_height="100px"
                android:src="@mipmap/default_header_icon" />

            <TextView
                android:id="@+id/tv_visit_left_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_header_left"
                android:layout_marginTop="10px"
                android:textColor="@color/colorBlackLight"
                android:text=""
                android:textSize="@dimen/text_size_4" />

            <TextView
                android:id="@+id/tv_visit_left_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32px"
                android:layout_marginTop="10px"
                android:layout_toRightOf="@+id/iv_header_left"
                android:background="@drawable/visit_content_bg_left"
                android:gravity="center_vertical"
                android:paddingLeft="30px"
                android:text=""
                android:textColor="@color/colorBlackLight"
                android:textSize="@dimen/text_size_l" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>