<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f5f5"
    android:orientation="vertical"
    tools:context="com.rxjy.rxcompound.activity.WorkActivity">

    <include layout="@layout/layout_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:gravity="center_vertical"
            android:paddingLeft="30px"
            android:text="人事"
            android:textSize="32px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="#f7f5f5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/qingjia_line"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15px"
                    android:layout_marginTop="40px"
                    android:layout_weight="1"
                    android:src="@mipmap/qingjia" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="40px"
                    android:gravity="center"
                    android:text="请假"
                    android:textSize="25px" />


            </LinearLayout>

            <View
                android:layout_width="3px"
                android:layout_height="match_parent"
                android:background="#f7f5f5" />

            <LinearLayout
                android:id="@+id/zhuanzheng_line"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView27"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="15px"
                    android:layout_marginTop="40px"
                    android:layout_weight="1"
                    android:src="@mipmap/zhuanzheng" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="40px"
                    android:gravity="center"
                    android:text="转正"
                    android:textSize="25px" />

            </LinearLayout>

            <View
                android:layout_width="3px"
                android:layout_height="match_parent"
                android:background="#f7f5f5" />

            <LinearLayout
                android:id="@+id/ly_ruzhi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15px"
                    android:layout_marginTop="40px"
                    android:layout_weight="1"
                     />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="40px"
                    android:gravity="center"
                    android:text=""
                    android:textSize="25px" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ly_tiaozhi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15px"
                    android:layout_marginTop="40px"
                    android:layout_weight="1"
                    android:src="@mipmap/qingjia" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="40px"
                    android:gravity="center"
                    android:text="调职"
                    android:textSize="25px" />


            </LinearLayout>

            <View
                android:layout_width="3px"
                android:layout_height="match_parent"
                android:background="#f7f5f5" />

            <LinearLayout
                android:id="@+id/ly_tiaoxin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15px"
                    android:layout_marginTop="40px"
                    android:layout_weight="1"
                    android:src="@mipmap/qingjia" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="40px"
                    android:gravity="center"
                    android:text="调薪"
                    android:textSize="25px" />
            </LinearLayout>

            <View
                android:layout_width="3px"
                android:layout_height="match_parent"
                android:background="#f7f5f5" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_tiao"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="15px"
                    android:layout_marginTop="40px"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="40px"
                    android:gravity="center"
                    android:textSize="25px" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20px"
            android:background="#f7f5f5" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:gravity="center_vertical"
            android:paddingLeft="30px"
            android:text="瑞祥文化"
            android:textSize="32px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="#f7f5f5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ge_line"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15px"
                    android:layout_marginTop="40px"
                    android:layout_weight="1"
                    android:src="@mipmap/song" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40px"
                    android:gravity="center"
                    android:text="瑞祥之歌"
                    android:textSize="25px" />


            </LinearLayout>

            <View
                android:layout_width="3px"
                android:layout_height="match_parent"
                android:background="#f7f5f5" />

            <LinearLayout
                android:id="@+id/wenhua_line"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="15px"
                    android:layout_marginTop="40px"
                    android:layout_weight="1"
                    android:src="@mipmap/zhunze" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="40px"
                    android:gravity="center"
                    android:text="瑞祥文化"
                    android:textSize="25px" />


            </LinearLayout>

            <View
                android:layout_width="3px"
                android:layout_height="match_parent"
                android:background="#f7f5f5" />

            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
