<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/lin_paper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBG"
            android:orientation="horizontal"
            android:padding="24px">

            <ImageView
                android:layout_width="10px"
                android:layout_height="30px"
                android:src="@mipmap/status_icon" />

            <TextView
                android:id="@+id/tv_paper_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:textColor="@color/colorBlackLight"
                android:textSize="@dimen/text_size_l" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_paper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:padding="24px">

            <TextView
                android:id="@+id/tv_paper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:layout_toLeftOf="@+id/iv_paper"
                android:singleLine="true"
                android:textColor="@color/colorGrayDark"
                android:textSize="@dimen/text_size_l" />

            <ImageView
                android:id="@+id/iv_paper"
                android:layout_width="102px"
                android:layout_height="42px"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

    </FrameLayout>

</LinearLayout>