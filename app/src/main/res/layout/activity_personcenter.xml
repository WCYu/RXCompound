<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_zjbg">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="100px">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text=""
            android:textSize="@dimen/text_size_l6"
            android:layout_marginRight="100px"
            android:layout_marginLeft="100px"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/colorwhite"/>

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_backwrite"
            android:padding="20px"/>

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="100px"
            android:layout_height="fill_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10px"
            android:textSize="@dimen/text_size_l"
            android:textColor="@color/colorwhite"
            android:text="修改"
            android:gravity="center"
            android:visibility="gone"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:id="@+id/iv_account"
            android:layout_width="200px"
            android:layout_height="200px"
            android:src="@drawable/click_account"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/iv_basezl"
            android:layout_alignStart="@+id/iv_basezl" />

        <ImageView
            android:id="@+id/iv_basezl"
            android:layout_width="200px"
            android:layout_height="200px"
            android:layout_above="@+id/iv_account"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="100px"
            android:src="@drawable/click_basezj" />

        <ImageView
            android:id="@+id/iv_xyzl"
            android:layout_width="200px"
            android:layout_height="200px"
            android:layout_below="@+id/iv_account"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100px"
            android:src="@drawable/click_xyzl" />
    </RelativeLayout>

