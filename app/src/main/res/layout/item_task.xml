<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="80px">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:textSize="@dimen/text_size_l"
            android:textColor="@color/text_txtblack"
            android:text="TextView" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_name"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="TextView"
            android:textSize="@dimen/text_size_l"
            android:textColor="@color/text_txtblack"
            android:layout_marginRight="20px"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="80px">

        <TextView
            android:id="@+id/tv_job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_time"
            android:layout_marginLeft="20px"
            android:layout_marginRight="10px"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="@dimen/text_size_m"
            android:textColor="@color/text_txtgrey"
            android:text="" />

        <TextView
            android:id="@+id/tv_lasttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_job"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="TextView"
            android:textSize="@dimen/text_size_4"
            android:textColor="@color/colorWhite"
            android:layout_marginRight="20px"
            android:paddingLeft="4px"
            android:paddingRight="4px"
            android:paddingTop="1px"
            android:paddingBottom="1px"
            android:background="@color/text_red"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_lasttime"
            android:layout_toStartOf="@+id/tv_lasttime"
            android:textSize="@dimen/text_size_m"
            android:textColor="@color/text_txtgrey"
            android:layout_marginRight="10px"
            android:text="TextView" />
    </RelativeLayout>

</LinearLayout>