<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_first_time"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@color/colorBG"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="80px"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorBG"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80px"
                android:layout_height="1px"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="20px"
                android:layout_marginStart="20px"
                android:background="@color/colorGrayDark" />

            <TextView
                android:id="@+id/tv_qianbao_first_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="20px"
                android:layout_marginStart="20px"
                android:text="2017年7月"
                android:textSize="30px" />

            <TextView
                android:layout_width="80px"
                android:layout_height="1px"
                android:layout_gravity="center_vertical"
                android:background="@color/colorGrayDark" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_list_item_qianbao_xmdate"
        android:layout_marginStart="15px"
        android:layout_marginEnd="15px"
        android:layout_marginTop="28px"
        android:layout_marginBottom="16px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24px"
        android:textColor="#9fa0a0"
        android:text="2017-7-17 16:00"/>
    <TextView
        android:layout_marginStart="15px"
        android:layout_marginEnd="15px"
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:background="#9fa0a0"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28px"
        android:layout_marginTop="15px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_marginEnd="20px"
            android:layout_marginStart="20px"
            android:src="@mipmap/qianbao_shouru" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="项目"
                    android:textColor="#595757"
                    android:textSize="26px" />
            <TextView
                android:id="@+id/tv_list_item_qianbao_xmname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12-186315"
                android:textColor="#595757"
                android:textSize="26px" />
                <TextView
                    android:id="@+id/tv_list_item_qianbao_xmnamehou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#595757"
                    android:textSize="26px" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收入"
                    android:textColor="#595757"
                    android:textSize="26px" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_list_item_qianbao_xmyushoutype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:text=""
                    android:textColor="#9fa0a0"
                    android:textSize="24px" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:text="预收"
                    android:textColor="#9fa0a0"
                    android:textSize="24px" />

                <TextView
                    android:id="@+id/tv_list_item_qianbao_xmyushoumoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:text="500"
                    android:textColor="#9fa0a0"
                    android:textSize="24px" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:text="元"
                    android:textColor="#9fa0a0"
                    android:textSize="24px" />


                </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_list_item_qianbao_xmjdsr_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#595757"
                    android:textSize="24px" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10px"
                    android:text="收入"
                    android:textColor="#595757"
                    android:textSize="24px" />

                <TextView
                    android:id="@+id/tv_list_item_qianbao_xmjdsr_fen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:textColor="#e60012"
                    android:textSize="24px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分+"
                    android:textColor="#595757"
                    android:textSize="24px" />

                <TextView
                    android:id="@+id/tv_list_item_qianbao_xmjdsr_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15px"
                    android:text="5000元"
                    android:textColor="#595757"
                    android:textSize="24px" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_list_item_qianbao_xmtype"
                android:layout_marginTop="20px"
                android:layout_marginEnd="15px"
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易成功"
                android:textColor="#22ac38"
                android:textSize="24px" />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_marginStart="15px"
        android:layout_marginEnd="15px"
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:background="#9fa0a0"/>
</LinearLayout>